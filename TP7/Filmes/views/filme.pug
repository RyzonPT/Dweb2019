extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Gestão de Filmes
            .w3-container
                    div(class="w3-container" style='padding-bottom: 20px;')
                        h2 Consultar Filme
                        br
                        label.w3-teal
                            b Titulo
                        br
                        label=filme.title
                        br
                        br
                        label.w3-teal
                            b Ano
                        br
                        label=filme.year
                        br  
                        br
                        label.w3-teal
                            b Géneros            
                        ul
                            each g in filme.genres
                                li=g
                        label.w3-teal
                            b Atores            
                        ul
                            each a in filme.cast
                                li=a
            address.margin-tb
                a(href="/filmes/#"+filme._id) Voltar à página inicial
            footer.w3-container.w3-teal
                adress Gerado por Gestão de Filmes