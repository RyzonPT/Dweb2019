extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
              .w3-center
                hr
                h1 Entidades
                hr
            .w3-container
                h3 Lista de Entidades
                table.w3-table-all
                                tr
                                    th Identificador
                                    th Designacao
                                    th Sigla
                                    th Estado
                                    th SIOE
                                    th Internacional
                                    th Operações

                                    each a, index in lista
                                        tr
                                            if(a.id)
                                              td=a.id
                                            else 
                                              td="Undfined"  
                                            if(a.designacao)
                                              td=a.designacao
                                            else
                                               td="Undfined"
                                            if(a.sigla)
                                              td=a.sigla
                                            else
                                               td="Undfined"
                                            if(a.estado)
                                              td=a.estado
                                            else
                                               td="Undfined"
                                            if(a.sioe)
                                              th=a.sioe
                                            else
                                               td="Undfined"
                                            if(a.internacional)
                                              th=a.internacional
                                            else
                                               td="Undfined"
                                            td
                                              button.w3-button.w3-teal(onclick="window.location.href='/"+a.id+"'") Consultar 
            hr                                                             
            footer.w3-container.w3-teal
              .w3-center
                adress Generated by Teste DWeb
            hr
                          