extends layout

block content
  .w3-container
      .w3-card-4
          header.w3-container.w3-teal
            .w3-center
              hr
              h1 Consultar Entidade
              hr
          hr
          .w3-container
            h3 Detalhes de Entidade
            label= "Designacao: " + entidade.designacao
            p
            label= "Sigla: " + entidade.sigla
            p
            label= "sioe: " +entidade.sioe
            p
            label= "Internacional: " +entidade.internacional
            p
            label= "Estado: " +entidade.estado

          if(tipologias.length > 0)
            .w3-container
              hr
              h3 Lista de Tipologias
              table.w3-table-all
                          tr
                              th Identificador
                              th Designacao
                              th Sigla
                              th Operação

                              each l, index in tipologias
                                  tr  
                                      td=l.id
                                      td=l.designacao
                                      td=l.sigla
                                      td
                                              button.w3-button.w3-teal(onclick="window.location.href='/tipologias/"+l.id+"'") Consultar
          if(donos.length > 0)
            .w3-container
              hr
              h3 Lista de Processos que esta entidade é Dona
              table.w3-table-all
                          tr
                              th Titulo
                              th Codigo
                              th Operações

                              each l, index in donos
                                  tr  
                                      td=l.titulo
                                      td=l.codigo
                                      td
                                              button.w3-button.w3-teal(onclick="window.location.href='http://clav.dglab.gov.pt/classes/consultar/c"+l.codigo+"'") Consultar

          if(participantes.length > 0)
            .w3-container
              hr
              h3 Lista de Processos em que esta entidade é participante
              table.w3-table-all
                          tr
                              th Titulo
                              th Tipo Participante
                              th Codigo

                              each l, index in participantes
                                  tr  
                                      td=l.titulo
                                      th=l.tipoPar
                                      td=l.codigo
          hr
          .w3-center
            button.w3-button.w3-teal(onclick="window.location.href='/'") Pagina Inicial

          hr                                                              
          footer.w3-container.w3-teal
            .w3-center
              adress Generated by Teste DWeb
          hr
                     
    
                                    