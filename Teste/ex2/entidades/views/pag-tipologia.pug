extends layout

block content
  .w3-container
      .w3-card-4
          header.w3-container.w3-teal
            .w3-center
              hr
              h1 Consultar Tipologia
              hr
          hr
          .w3-container
            h3 Detalhes de Tipologia
            label= "Designacao: " + tipologia.designacao
            p
            label= "Sigla: " + tipologia.sigla
            p
            label= "Estado: " +tipologia.estado

          if(entidades.length > 0)
            .w3-container
              hr
              h3 Lista de Entidades da Tipologia
              table.w3-table-all
                          tr
                              th Identificador
                              th Designacao
                              th Sigla
                              th Operação

                              each l, index in entidades
                                  tr  
                                      td=l.id
                                      td=l.designacao
                                      td=l.sigla
                                      td
                                              button.w3-button.w3-teal(onclick="window.location.href='/"+l.id+"'") Consultar
          hr
          .w3-center
            button.w3-button.w3-teal(onclick="window.location.href='/'") Pagina Incial
            button.w3-button.w3-teal(onclick="javascript:history.go(-1)") Voltar

          hr                                                              
          footer.w3-container.w3-teal
            .w3-center
              adress Generated by Teste DWeb
          hr
                     
    
                                    